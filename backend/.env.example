# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cocoa_db

# JWT - Utiliser SECRET_KEY ou JWT_SECRET (les deux fonctionnent)
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-secret-key-here-change-in-production
ALGORITHM=HS256
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Ajouter l'URL Vercel en production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# SMTP Configuration pour les emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre-email@gmail.com
SMTP_PASSWORD=votre-mot-de-passe-app
FROM_EMAIL=votre-email@gmail.com
FROM_NAME=CocoaTrack

# Destinataires des rapports automatiques (séparés par des virgules)
REPORT_RECIPIENTS=admin@example.com,manager@example.com

